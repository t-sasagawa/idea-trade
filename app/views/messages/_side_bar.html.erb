<div class="side-bar-header">
  <div class="side-header-title">
    <a href="#">Idea Trade</a>
  </div>
  <div class="create-room">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>


<div class="rooms">
  <div class="room">
    <ul class="room-name">
      <% if @rooms.exists? %>
      <% @rooms.each do |room| %>
      <li class="list">
        <%= link_to room_messages_path(room) do %>
        <%= room.name %>
        <% end %>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="rooms-f">
  <div class="user-name">
    <%= link_to current_user.nickname, edit_user_path(current_user) %>
  </div>
</div>